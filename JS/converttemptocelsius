<!DOCTYPE html>
<html>
<head>
  <title>Temperature Converter</title>
</head>
<body>

  <h2>Temperature Converter</h2>

  <label>Enter Celsius:</label>
  <input type="number" id="celsiusInput">
  <button onclick="convertToFahrenheit()">Convert to Fahrenheit</button>
  <p id="fahrenheitResult"></p>

  <br>

  <label>Enter Fahrenheit:</label>
  <input type="number" id="fahrenheitInput">
  <button onclick="convertToCelsius()">Convert to Celsius</button>
  <p id="celsiusResult"></p>

  <script>
    function convertToFahrenheit() {
      let c = document.getElementById("celsiusInput").value;
      let f = (c * 9 / 5) + 32;
      document.getElementById("fahrenheitResult").innerText = c + "째C is " + f + "째F";
    }

    function convertToCelsius() {
      let f = document.getElementById("fahrenheitInput").value;
      let c = (f - 32) * 5 / 9;
      document.getElementById("celsiusResult").innerText = f + "째F is " + c + "째C";
    }
  </script>

</body>
</html>